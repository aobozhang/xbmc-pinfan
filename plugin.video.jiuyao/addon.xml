<?xml version="1.0" encoding="UTF-8"?>
<addon
    id="plugin.video.jiuyao"
    name="酒药"
    version="2.0.0"
    provider-name="Private">
    <requires>
        <!-- Commenting xbmc.python allows install on all versions of Kodi -->
        <!-- <import addon="xbmc.python" version="2.14.0"/> -->
        <import addon="script.module.keyboard.chinese" version="2.0.4" optional="true"/>
        <import addon="script.module.simplejson" version="3.3.0"/>
        <import addon="script.module.kodi-six"/>
        <import addon="script.module.requests"/>
    </requires>
    <extension
        point="xbmc.python.pluginsource"
        library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">jiuyao video plugin</summary>
        <summary lang="zh">酒药插件</summary>
        <description lang="en">online video from jiuyao</description>
        <description lang="zh">酒药</description>
        <platform>all</platform>
        <website><![CDATA[https://github.com/aobozhang]]></website>
        <forum></forum>
        <source><![CDATA[https://github.com/aobozhang]]></source>
        </extension>
</addon>
